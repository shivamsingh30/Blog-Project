<%- include('../../header.ejs') %>
    <div class="container-fluid" style="margin-top: 100px;">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <table style="border:1px solid white;width: 200px;background: grey;color:white;cursor: pointer;"
                        class="alpha">
                        <tr>
                            <th class="alpha"><a href="/admin/dashboard" class="alpha"
                                    style="text-decoration: none;color:white;font-size: 18px;padding-left: 5px;">Dashboard</a>
                            </th>

                        </tr>
                    </table>
                    <table style="border:1px solid white;width: 200px;background: grey;color:white;cursor: pointer;"
                        class="mt-2 alpha">
                        <tr style="border:1px solid white;">
                            <th class="alpha"><a href="/admin/blogdisplay" class="alpha"
                                    style="text-decoration: none;color:white;font-size: 18px;padding-left: 5px;">Display
                                    Blog</a></th>

                        </tr>
                    </table>
                    <table style="border:1px solid white;width: 200px;background: grey;color:white;cursor:pointer"
                        class="mt-2 alpha">
                        <tr style="border:1px solid white;">
                            <th class="alpha"><a href="/admin/category/display" class="alpha"
                                    style="text-decoration: none;color:white;font-size: 18px;padding-left: 5px;">Categories</a>
                            </th>

                        </tr>
                    </table>

                    <table style="border:1px solid white;width: 200px;background: grey;color:white;cursor: pointer;"
                        class="mt-2 alpha">
                        <tr style="border:1px solid white;">
                            <th class="alpha"><a href="/admin/contact/display" class="alpha"
                                    style="text-decoration: none;color:white;font-size: 18px;padding-left: 5px;">Contact</a>
                            </th>

                        </tr>
                    </table>

                    <table style="border:1px solid white;width: 200px;background: grey;color:white;cursor:pointer"
                        class="mt-2 alpha">
                        <tr style="border:1px solid white;">
                            <th class="alpha"><a href="/admin/about/display" class="alpha"
                                    style="text-decoration: none;color:white;font-size: 18px;padding-left: 5px;">About</a>
                            </th>

                        </tr>
                    </table>
                    <table style="border:1px solid white;width: 200px;background: grey;color:white;cursor:pointer"
                        class="mt-2 alpha">
                        <tr style="border:1px solid white;">
                            <th class="alpha"><a href="/login" class="alpha"
                                    style="text-decoration: none;color:white;font-size: 18px;padding-left: 5px;">Logout</a>
                            </th>

                        </tr>

                    </table>
                </div>
                <div class="col-md-9">
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        Add Blog
                    </button><br>
                    <hr>
                    <h2>Blog List</h2>
                    <table style="border:1px solid black;width:800px;">
                        <tr style="border:1px solid black">
                            <th style="border:1px solid black">Id</th>
                           
                            <th style="border:1px solid black">Title</th>
                            <th style="border:1px solid black">Description</th>
                            <th style="border:1px solid black">Image</th>
                           
                            <th style="border:1px solid black">Action</th>
                        </tr>
                        <% d.forEach((item)=>{ %>

                            <tr style="border:1px solid black">
                                <th style="border:1px solid black"><%= item._id %></th>
                                
                                <th style="border:1px solid black"><%= item.title %></th>
                                <th style="border:1px solid black"><%= item.description %></th>
                                <th style="border:1px solid black"><img src="<%= item.image.url %>" width="50px" alt=""></th>
                                
                                <th style="border:1px solid black">
                                    <a href="/admin/blogview/<%= item._id %>" class="btn btn-info">View</a>
                                    <a href="/admin/blogedit/<%= item._id %>" class="btn btn-success">Edit</a>
                                    <a href="/admin/blogdelete/<%= item._id %>" class="btn btn-danger">Delete</a>
                                </th>
                            </tr>

                           <% }) %>

                            
                    </table>
                </div>

            </div>
        </div>

    </div>
    <div class="container-fluid bg-secondary " style="margin-top: 240px;">
        <div class="container">
            <div class="row">
                <h2 class="text-white text-center">Thank You for reading!</h2>
                <h4 class="text-white text-center">if you enjoyed this post.please feel free to share it.</h4>
            </div>
        </div>
    </div>


    <!-- modal blog add -->
    <!-- Button trigger modal -->

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Add Blog</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/insertblog" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="">Title</label>
                            <input type="text" name="title" class="form-control">

                        </div>
                        <div class="mb-3">
                            <label for="">Discription</label>
                            <textarea type="text" name="description" class="form-control"></textarea>

                        </div>
                        <div class="md-3 mb-3">
                            <label for="">Upload Image</label>
                          <input type="file" name="image" class="form-control">

                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>

                    </form>
                </div>

            </div>
        </div>
    </div>

    <%- include('../../footer.ejs') %>